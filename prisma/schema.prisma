generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Attach {
  id        String   @id @default(uuid())
  title     String
  pdfLink   String?
  Item      Item     @relation(fields: [itemId], references: [id])
  itemId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Item {
  id           String   @id @default(uuid())
  title        String
  userId       String
  username     String
  coverLink    String
  pptLink      String
  attaches     Attach[]
  archived     Boolean
  introduction String?
  motivation   String?
  conclusion   String?
  inspiration  String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
